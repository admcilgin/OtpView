<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edtCode1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberSigned"

        android:imeOptions="actionNext"
        android:singleLine="true"
        android:nextFocusForward="@+id/edtCode2"
        android:maxLength="1"
        android:fontFamily="@font/gordita_regular"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/darkish_pink"
        android:hint="•"
        android:gravity="center"

        android:background="@drawable/selector_otp_view"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtCode2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtCode2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberSigned"


        android:imeOptions="actionNext"
        android:singleLine="true"
        android:nextFocusForward="@+id/edtCode3"
        android:maxLength="1"
        android:fontFamily="@font/gordita_regular"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/darkish_pink"
        android:hint="•"
        android:gravity="center"

        android:focusableInTouchMode="true"
        android:background="@drawable/selector_otp_view"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtCode3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtCode1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtCode3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberSigned"


        android:imeOptions="actionNext"
        android:singleLine="true"
        android:nextFocusForward="@+id/edtCode4"
        android:maxLength="1"
        android:fontFamily="@font/gordita_regular"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/darkish_pink"
        android:hint="•"
        android:gravity="center"
        android:background="@drawable/selector_otp_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtCode4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtCode2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtCode4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:nextFocusForward="@+id/edtCode5"

        android:maxLength="1"
        android:fontFamily="@font/gordita_regular"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/darkish_pink"
        android:hint="•"
        android:gravity="center"
        android:background="@drawable/selector_otp_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtCode5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtCode3"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edtCode5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:nextFocusForward="@+id/edtCode6"

        android:maxLength="1"
        android:fontFamily="@font/gordita_regular"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/darkish_pink"
        android:hint="•"
        android:gravity="center"
        android:background="@drawable/selector_otp_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtCode6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtCode4"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtCode6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="numberSigned"

        android:maxLength="1"
        android:fontFamily="@font/gordita_regular"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/darkish_pink"
        android:hint="•"
        android:gravity="center"
        android:background="@drawable/selector_otp_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtCode5"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>